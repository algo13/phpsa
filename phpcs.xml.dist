<?xml version="1.0"?>
<ruleset name="phpsa">
  <description>The PHPSA coding standard.</description>

  <file>bin/</file>
  <file>src/</file>
  <file>tests/PHPSA/</file>

  <arg value="p" />

  <rule ref="PSR2">
    <exclude name="Generic.Files.LineLength.TooLong" />
  </rule>
  <rule ref="Squiz.WhiteSpace.ControlStructureSpacing.NoLineAfterClose">
    <severity>5</severity>
  </rule>
</ruleset>
